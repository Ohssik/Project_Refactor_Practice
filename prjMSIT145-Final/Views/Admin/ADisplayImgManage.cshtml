                //            $('.showAdImg>img').attr('src', `@Url.Content("~/adminImg/adDisplay/")${value.imgName}`);
                //        });
                        
                //    }
                //});

                $('#tdFid').text($(this).data('id'));
                $('#tdImgName').text($(this).data('name'));
                $('#tdImgBelongTo').text($(this).data('blt'));
                $('#tdStartTime>input').val($(this).data('st'));                
                $('#tdEndTime>input').val($(this).data('et'));
                $('#tdHyperlink>input').val($(this).data('link'));
                $('.showAdImg>img').attr('src', `@Url.Content("~/adminImg/adDisplay/")${$(this).data('name')}`);
            });

            $('#tdStartTime>input').change(function(){                
                let st=$(this).val();
                //console.log(st);
                //console.log(clickedTarget);
                $(`[data-id=${clickedTarget}]`).attr('data-st',st);
            });
            $('#tdEndTime>input').change(function(){                
