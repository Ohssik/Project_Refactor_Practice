                //$.ajax({
                //    url: `@Url.Content("~/Admin/loadImgInfo")`,
                //    type: "post",
                //    data: {
                //        "fid": $(this).attr('data-id')
                        
                //    },
                //    dataType: "json",
                //    success: function (msg) {
                        
                //        $(msg).each(function(key,value){
                //            //console.log(value);
                //            $('#tdFid').text(value.fid);
                //            $('#tdImgName').text(value.imgName);
                //            $('#tdImgBelongTo').text(value.imgBelongTo);
