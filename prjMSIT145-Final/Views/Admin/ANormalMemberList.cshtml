@model IEnumerable<prjMSIT145_Final.ViewModels.CANormalMemberViewModel>
@{
    ViewData["Title"] = "管理者控制台/一般會員管理";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">一般會員管理</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">會員一覽表</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Fid)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MemberName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Phone)
                            </th>                                                        
           
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model._EmailCertified)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model._IsSuspensed)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Fid)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.MemberName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item._EmailCertified)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item._IsSuspensed)
                            </td>
                            <td>
                                    <a href='@Url.Action("ANormalMemberDetails","Admin",new { id=item.Fid })' class="btn btn-info btn-circle">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                 
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $('.nav-item').eq(0).addClass('active').siblings().removeClass('active');
    </script>

}