@{
    ViewData["Title"] = "ListInfo";
}
@section Styles{
    <style>
        .div1 {
            margin: 90px auto;
            width: 75%;
            box-sizing: border-box;
            display: flex;
            padding: 15px;
            
        }
        .leftArea {
            width: 50%;
            border-right: 2px dashed #9F4E27;
            box-sizing: border-box;
            padding: 8px 8px 8px 0;
        }
        .storeImg {
            width: 85px;
            height: 100px;
            margin-right: 15px;
            box-sizing:border-box;
            padding:8px 0;
        }
            .storeImg img {
                width: 100%;
                height: 100%;
                border-radius: 50%;
            }

        .flex {
            display: flex;
        }

        .margin {
            margin: 10px 0;
        }

        .leftPickUpNum {
            height: 20px;
            background-color: lightblue;
            box-sizing: border-box;
            padding: 8px 10px;
            font-size: 18px;
            color: white;
        }

        .leftDiv_leftSpan {
            width: 100px;
            font-size: 10px;
        }

        

        .leftDiv_infoDiv {
            height: 45px;
            box-sizing: border-box;
            padding: 0 0 5px 5px;
            margin:8px 0 10px 0;
        }

        .leftDiv_rightSpan {
            width: 150px;
            font-size: 12px;
            border-radius: 5px;
            margin:0 0 0 65px;
        }

        .rightDiv_rightSpan {
            width: 709px;
            font-size: 12px;
            border-radius: 5px;
            text-align:right;
        }

        .leftDiv_StateSpan {
            width: 90px;
            height: 40px;
            box-sizing: border-box;
            padding: 8px;
            background-color: lightskyblue;
            color: white;
        }

        .bottomBorder {
            border-bottom: 1px solid lightgray;
            
        }
        .topBorder {
            
            border-top: 1px solid lightgray;
        }

        .leftDiv_Rate {
            align-items: flex-start;
            max-height: 500px;
            min-height: 70px;
            max-width: 100%;
            min-width: 100%;
            font-size: 12px;
            background-color: aliceblue;
        }

        .leftDiv_RateDiv {
            box-sizing: border-box;
            padding: 0 10px 0 0;
        }

        .rightDiv {
            box-sizing: border-box;
            padding: 0 20px;
            width: 80%;
        }

        .rightDiv_display {
            display: flex;
            flex-direction: column;
        }

        .rightItemDiv {
            width: 100%;
            height: 70px;
            box-sizing: border-box;
            padding: 3px 15px;
        }

        .mainDiv {
            position: relative;
            width: 45%;
            margin: 10px auto;
            /* z-index: 0; */
        }

        .flexAndItemsCenter {
            width: 100%;
            display: flex;
            align-items: center;
        }

        h4, h5, h6 {
            margin: 5px 0;
            color: #9F4E27;
            font-size:18px;
        }

        .Fieldset {
            border-radius: 10px;
            color: gray;
            height: 30px;
            margin: 10px 0;
            font-size: 12px;
            border: 1px solid gray;
        }

        .spanFont {
            font-size: 12px;
        }

            .spanFont p{
                margin:5px 0 10px 5px;
            }

        .exclamation {
            box-sizing: border-box;
            height: 20px;
            width: 20px;
            border-radius: 50%;
            background-color: rgb(251, 86, 86);
            text-align: center;
            padding: 2px 0;
            margin-right: 15px;
        }

        .exclamationDiv {
            box-sizing: border-box;
            height: 30px;
            background-color: rgb(253, 219, 224);
            border-radius: 10px;
            padding: 0 5px;
        }

        .body_Icon_delete_Guide_fontColor {
            color: rgb(79, 69, 79);
        }

        .button_Icon_Guide_BackGroundColor {
            background-color: rgb(250, 250, 248);
        }

        .cardBorderColor {
            border-color: #9F4E27
        }

        .cardBackgroundColor {
            /* background-color: rgb(255, 251, 217); */
            background-color: white;
        }

        

        .card_Guide_FontColor {
            color: #595757;
        }

        
        p,span{
            font-weight: 600;
            font-size: 18px;
        }
        .allDiv{
            border-radius:10px;
        }
    </style>
}





    

