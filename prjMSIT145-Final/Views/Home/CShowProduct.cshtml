                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `);

                let docFrag = document.createDocumentFragment();
                $('.productitem.CursorPointer').each(function () {
                    $(docFrag).append($(this).clone());
                });
                $('#searchDiv .searchItems>.mb-3').append(docFrag);
                //console.log(docFrag);
                searchBlock = new bootstrap.Modal(document.getElementById('searchBlock'), {
                    keyboard: false
                });

                searchBlock.show();

            });

            $('#searchDiv').on('click', '[name=btnCloseWindow]', function () {
                searchBlock.hide();
                $('#searchDiv').html('');
            });
            $('#searchDiv').on('click', '.productitem.CursorPointer', function () {
                searchBlock.hide();
                $('#searchDiv').html('');
                let productId = $(this).data('pid');
                showProductInfo(productId);
            });
            $('#searchDiv').on('change', '[name=txtKeyword]', function () {
                $('#searchDiv .productitem.CursorPointer').hide();
                let txtKeyword = $(this).val().trim();
                if (txtKeyword == '') {
                    $('#searchDiv .productitem.CursorPointer').show();
                    return false;
                }

                $('#searchDiv .productitem.CursorPointer').filter(`[data-productName*=${txtKeyword}]`).show()

            });

            function showProductInfo(productId) {

                $.ajax({
                    url: `@Url.Content("~/Home/getProductInfo")`,
                    type: 'post',
                    data: {
                        data: productId
                    },
                    dataType: 'json',
                    success: function (product) {
                        $('#searchDiv').html('');
                        if (`${product}` != 'This Product ID is invalid') {
                            check = 0;
                            document.getElementById("PFid").value = productId;
                            document.getElementById("ProductTitle").innerHTML = product.productName;
                            //-----------------Modal-Body
                            getOptiondatas(productId);
                            //-----------------Modal-Footer
                            BasePriceRecord = product.unitPrice;
                            BasePrice = BasePriceRecord;
                            document.getElementById("Total").innerHTML = product.unitPrice;
                            document.getElementById("TotalAmount").value = product.unitPrice;
                            document.getElementById("Count").innerHTML = "1";
                            document.getElementById("Qty").value = "1";
                        }
                    }
                });

