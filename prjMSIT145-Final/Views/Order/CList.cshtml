        .pic_Div {
            width: 100%;
            height: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .pic {
            height: 80px;
            width: 80px;
        }

            .pic img {
                width: 100%;
                height: 100%;
                border-radius: 50%;
                object-fit: cover;
                overflow: hidden;
                margin: 0;
            }

        .timeDiv {
            display: flex;
            justify-content: right;
            font-size: 10px;
        }

        .column {
            display: flex;
            flex-direction: column;
            align-content: space-between;
        }

        .h4_margin {
            margin: 10px;
        }

        .p_font_margin {
            font-size: 14px;
            margin: 8px;
        }

        a:link {
            text-align: center;
        }

        .padding {
            box-sizing: border-box;
            padding: 10px;
        }

        .divCenter {
            /* 讓容器置中 */
            display: flex;
            flex-wrap: wrap;
            /* position: absolute;
                left: 0px;
                right: 0px; */
            margin: 10px auto;
            max-width: 70%;
            height: 100%;
        }

        .cartDiv {
            min-width: 17rem;
            height: 250px;
            border-width: 1px;
            border-style: solid;
            position: relative;
            border-radius: 10px;
            margin: 10px;
            text-align: center;
        }

        .btnDiv {
            height: 50px;
            width: 50px;
            display: flex;
            position: absolute;
            bottom: 5px;
            right: 5px;
        }

            .btnDiv button {
                height: 100%;
                width: 100%;
                border: 1px solid;
                background-color: transparent;
            }

        .linkTrash {
            box-sizing: border-box;
            width: 100%;
            height: 100%;
            text-align: center;
            padding: 15px 0;
        }

        .topBorder {
            border-top: 1px solid;
            padding: 5px 0;
        }
    </style>
}
