<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>日柴Daily - @ViewBag.Title</title>
    <link rel="shortcut icon" href="~/images/Customer/shiba.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/prjMSIT145-Final.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        
        #main>div:nth-child(1){
            /*width:80%;*/
            background-color: #9E4E27;
            height:100vh;
        }


        #main > div:nth-child(1)>div{
            background-color: burlywood;
            width:100%;
            margin: 21% auto;
        }

        #main > div:nth-child(1) img{
            width:50%;
            margin:0 25%;
        }
    </style>
</head>
<body>
    <div id="main" class="row">
        <div class="col-9">
            <div>
                <img src='@Url.Content("~/adminimg/login.png")' />
                
            </div>
        </div>
        <div class="col-3">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
