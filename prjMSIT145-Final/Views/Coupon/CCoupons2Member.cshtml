        }
        .exch.row{
            width:50%;        
            border-radius:10px;
            /*cursor: pointer;*/
            
        }
        .exch.row.showCoup{
            width:100%;                    
        }
       
        .exch.col-md-4{
            margin:10px auto;
            width:90%;
            text-align:center;
            display:flex;
            height:110px;
            
